[
    {
        "id": "signup-name",
        "label": "Name",
        "inputType": "text",
        "pattern": "^[A-Za-z]{2,40}$",
        "placeholder": "Enter your first name",
        "error": "Only letters, 2 to 40 characters long"
    },
    {
        "id": "signup-email",
        "label": "Email",
        "inputType": "email",
        "placeholder": "Enter a valid email",
        "error": "Not a valid email",
        "required": true
    },
    {
        "id": "signup-password",
        "label": "Password",
        "inputType": "password",
        "placeholder": "Use a strong password",
        "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[^a-zA-Z\\d])[^\\s]{8,}$",
        "error": "Minimum 8 characters, one uppercase, one lowercase, one number, and one special character",
        "required": true,
        "hasStrengthIndicator": true,
        "hasDisplayToggle": true
    }
]
